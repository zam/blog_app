<h1>Edit Blog</h1>

<%= form_with model: @blog do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :author %><br>
        <%= form.text_field :author %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    <button><%= link_to "Back", blog_path %></button>
<% end %>
